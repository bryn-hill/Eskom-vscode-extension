{
  "author": {
    "name": "Bryn Hill",
    "email": "Bryn.hill@outlook.com"
  },
  "license": "MIT",
  "name": "eskom",
  "displayName": "VSLoad Shedding Notifier",
  "description": "Uses Eskom's se push API to notify you of the next load shedding slot",
  "version": "0.9.1",
  "repository": {
    "url": "https://github.com/bryn-hill/Eskom-vscode-extension"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "eskom.loadSheddingAlert",
        "title": "Eskom: Next loadShedding slot"
      },
      {
        "command": "eskom.updateToken",
        "title": "Eskom: Update API token"
      },
      {
        "command": "eskom.updateArea",
        "title": "Eskom: Update Area"
      },
      {
        "command": "eskom.invalidateCache",
        "title": "Eskom: clear cache"
      }
    ],
    "configuration": [
      {
        "id": "eskom",
        "title": "Eskom load shedding notifier",
        "order": 1,
        "properties": {
          "eskom.token": {
            "type": "string",
            "title": "Eskom se push API token"
          },
          "eskom.area": {
            "type": "string",
            "title": "Eskom se push area id"
          },
          "eskom.warningTimeMins": {
            "type": "number",
            "title": "Number of minutes before loadShedding",
            "default": 15
          },
          "eskom.provider": {
            "title": "loadShedding provider",
            "enum": [
              "Eskom",
              "EskomSePush",
              "Sintrex"
            ],
            "default": "EskomSePush"
          }
        }
      }
    ]
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/sinon": "^10.0.13",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.6.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "nock": "^13.3.0",
    "prettier": "^2.8.3",
    "sinon": "^15.0.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.2.3",
    "date-fns": "^2.29.3",
    "eskom-loadshedding-api": "^0.1.5"
  }
}
